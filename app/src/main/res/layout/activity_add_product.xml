<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/addproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Wprowadź nowy produkt"
        android:textColor="@color/cyan"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <EditText
        android:id="@+id/name"
        android:layout_marginTop="15dp"
        style="@style/input"
        android:inputType="text"
        android:hint="Nazwa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addproduct" />

    <EditText
        android:id="@+id/brand"
        android:layout_marginTop="15dp"
        style="@style/input"
        android:inputType="text"
        android:hint="Marka"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/price"
        android:layout_marginTop="15dp"
        style="@style/input"
        android:inputType="number"
        android:hint="Cena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brand" />

    <EditText
        android:id="@+id/amount"
        android:layout_marginTop="15dp"
        style="@style/input"
        android:inputType="number"
        android:hint="Ilość"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <EditText
        android:id="@+id/link"
        style="@style/input"
        android:layout_marginTop="15dp"
        android:hint="Link do zdjęcia"
        android:inputType="text"
        android:text="https://i.imgur.com/ORENqmP.png"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount" />

    <EditText
        android:id="@+id/description"
        style="@style/input"
        android:layout_width="314dp"
        android:layout_height="145dp"
        android:layout_marginTop="15dp"
        android:hint="Opis"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/link" />

    <Button
        android:id="@+id/confirm_button"
        style="@style/button"
        android:layout_marginTop="16dp"
        android:text="Dodaj produkt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description" />


    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/teal"
        app:cardElevation="3dp"
        app:contentPadding="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:layout_gravity="left|center"
            app:srcCompat="@drawable/back_arrow_svgrepo_com" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>