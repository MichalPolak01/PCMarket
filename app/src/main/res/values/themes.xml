<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PCMarket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="input">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#3A1078</item>
        <item name="android:textColorHint">#3A1078</item>
    </style>

    <style name="button">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="button2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="imageCorner" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="imageCornerCircle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



</resources>